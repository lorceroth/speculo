{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@plugins/*": ["plugins/*"]
    }
  },
  "include": [
    "src/**/*",
    "plugins/**/*"
  ]
}
